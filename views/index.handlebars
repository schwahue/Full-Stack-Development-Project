<div class="container">
	<div class="jumbotron text-center my-4">
		<div class="row mx-auto">
			<div class="container">
				<h1 class="display-4">Lazopee</h1>
				<p class="lead">Lost child of Lazada & Shopee</p>
			</div>
		</div>


		<div class="row mx-auto">
			<div class="col-md-12">
				<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						<li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
						<li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
						<li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
						<li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
					</ol>
					<div class="carousel-inner">
						<div class="carousel-item active">
							<img src="/img/front.jpg" class="rounded mx-auto img-fluid" alt="{{productName}}">
							<div class="carousel-caption d-none d-md-block">
								<h2>Hot Items</h2>
							</div>
						</div>

						{{#each products}}
						<div class="carousel-item">
							<img src="{{productImageURL}}" class="rounded mx-auto img-fluid" alt="{{productName}}">
							<div class="carousel-caption d-none d-md-block" style="color:black">
								<h5>{{productName}}</h5>
								<p>{{productDescription}}</p>
							</div>
						</div>
						{{/each}}
					</div>
					<a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
		</div>
	</div>
	<div class="row text-center mx-auto">
		{{#each productsAll}}
		<div class="col-sm-12 col-lg-4 mx-auto" style="margin-top:20px">
			<div class="card">
				<img class="card-img-top img-thumbnails img-fluid" style="height:300px; width:300px"
					src="{{productImageURL}}" alt="Card image cap">
				<div class="card-body">
					<h5 class="card-title">{{productName}}</h5>
					<p class="card-text"><b>Description:</b> {{productDescription}}</p>
					<p class="card-text"><b>Price:</b> ${{productPrice}}</p>
					<p class="card-text"><b>Category:</b> {{productCategory}}</p>
					<div class="row text-center">
						<div class="col"><a href="/product" class="btn btn-success">Shop Now!
							</a></div>
					</div>
				</div>

			</div>
		</div>
		{{/each}}
	</div>

</div>


</div>
</div>

<script>
	firebase.analytics().logEvent("page_view");
</script>