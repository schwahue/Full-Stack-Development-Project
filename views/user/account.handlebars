
<div class="container-fluid main">
    <div class="row">
        <div class=" col-md-2 side-nav offset-md-1 ">
            <p class="welcome"> Welcome {{ user.last_name }}!</p>
            <hr>
            <p class="sub-title">Account</p>
            <ul class="navbar-nav">
                <li class="active nav-item side-link-li" style="cursor:pointer;" onclick="changeSideNav(this, 1)"><a class="side-link-a">Profile </a></li>
                <li class="nav-item side-link-li" style="cursor:pointer;" onclick="changeSideNav(this, 2)"><a class="side-link-a">Change Password</a></li>
                <li class="nav-item side-link-li" style="cursor:pointer;" onclick="changeSideNav(this, 3)"><a class="side-link-a">Address</a></li>

            </ul>

            <hr>
            <a class="sub-title" style="color:#000000" href="/user/orders">My Orders</a>
            <!--<ul class="navbar-nav">
                <li class="nav-item"><a style="color:#000000" class="" href="/user/orders">Track My Order</a></li>
            </ul>-->
            <hr>
        </div>
        
        <div class="content col-xd col-md-7">
                <h4 class="sub-content-title">Profile</h4>

                <form novalidate method="POST" action="">
                    <div class="border border-secondary">
                        <div class="p-info"> <!-- Form Elements -->

                            <div class="row"> <!-- Name -->
                                <div class="col">
                                    <div class="form-group">
                                        <label for="first_name">First Name</label>
                                        <input type="text" class="form-control" id="first_name" name="first_name" value="{{ user.first_name }}">
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-group">
                                        <label for="last_name">Last Name</label>
                                        <input type="text" class="form-control" id="last_name" name="last_name" value="{{ user.last_name }}">
                                    </div>
                                </div>
                            </div> <!-- End of Name -->

                            <div class="container su-btn">
                                <input type="Submit" name="submit" value="Update Profile" class="btn form-button"/>
                            </div>

                        </div> <!-- End of Form Elements -->
                    </div> <!-- End of Border -->

                </form>

    </div>
</div>

<script>
    var menu_choice = 1;

    function changeSideNav(el, num){

        if (num == 1 && menu_choice != 1){
            var current = document.getElementsByClassName("active");
            //current[0].className = current[0].classList.remove("active");
            current[0].classList.remove("active");
            el.classList.add("active");
            

            document.getElementsByClassName("content")[0].innerHTML = `
            <h4 class="sub-content-title">Profile</h4>

                <form novalidate method="POST" action="">
                    <div class="border border-secondary">
                        <div class="p-info"> <!-- Form Elements -->

                            <div class="row"> <!-- Name -->
                                <div class="col">
                                    <div class="form-group">
                                        <label for="first_name">First Name</label>
                                        <input type="text" class="form-control" id="first_name" name="first_name" autocomplete="on" value="{{ user.first_name }}">
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-group">
                                        <label for="last_name">Last Name</label>
                                        <input type="text" class="form-control" id="last_name" name="last_name" autocomplete="on" value="{{ user.last_name }}">
                                    </div>
                                </div>
                            </div> <!-- End of Name -->

                            <div class="container su-btn">
                                <input type="Submit" name="submit" value="Update Profile" class="btn form-button"/>
                            </div>

                        </div> <!-- End of Form Elements -->
                    </div> <!-- End of Border -->

                </form>`;
            menu_choice = 1;

        }
        else if (num == 2 && menu_choice != 2){
            var current = document.getElementsByClassName("active");
            //current[0].className = current[0].classList.remove("active");
            current[0].classList.remove("active");
            el.classList.add("active");
            document.getElementsByClassName("content")[0].innerHTML = `<h4 class="sub-content-title">Change Password</h4>
            <form novalidate method="POST" action="">
                    <div class="border border-secondary">
                        <div class="p-info"> <!-- Form Elements -->

                            <div class="row"> <!-- Password -->
                                <div class="col">
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" id="password "autocomplete="off" name="password">
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-group">
                                        <label for="c_password">Confirm Password</label>
                                        <input type="password" class="form-control" id="c_password "autocomplete="off" name="c_password">
                                    </div>
                                </div>
                            </div> <!-- End of Password -->

                            <div class="container su-btn">
                                <input type="Submit" name="submit" value="Change Password" class="btn form-button"/>
                            </div>

                        </div> <!-- End of Form Elements -->
                    </div> <!-- End of Border -->

                </form>`;

            menu_choice = 2;
        }
        else if (num == 3 && menu_choice != 3){
            var current = document.getElementsByClassName("active");
            //current[0].className = current[0].classList.remove("active");
            current[0].classList.remove("active");
            el.classList.add("active");

            document.getElementsByClassName("content")[0].innerHTML = `
            <h4 class="sub-content-title">Address</h4>

            <form novalidate method="POST" action="">
                    <div class="border border-secondary">
                        <div class="p-info"> <!-- Form Elements -->

                            <div class="row"> <!-- Country -->
                                <div class="col">
                                    <div class="form-group">
                                        <label for="country">Country</label>
                                        <input type="text" class="form-control" id="country" name="country" value="{{ user.country }}">
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-group">
                                        <label for="city">City</label>
                                        <input type="text" class="form-control" id="city" name="city" value="{{ user.city }}">
                                    </div>
                                </div>
                            </div> <!-- End of Country -->

                            <div class="form-group"> <!-- Street Address -->
                                <label for="address">Address</label>
                                <input type="text" class="form-control" id="address" name="address" value="{{ user.address }}">
                            </div> <!-- End of Street Address -->

                            <div class="row"> <!-- Detailed -->
                                <div class="col">
                                    <div class="form-group">
                                        <label for="unit_number">Unit Number</label>
                                        <input type="text" class="form-control" id="unit_number" name="unit_number" value="{{ user.unit_number }}">
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-group">
                                        <label for="postal_code">Postal Code</label>
                                        <input type="text" class="form-control" id="postal_code" name="postal_code" value="{{ user.postal_code }}">
                                    </div>
                                </div>

                            </div> <!-- End of Detailed -->

                            <div class="container su-btn">
                                <input type="Submit" name="submit" value="Update Address" class="btn form-button"/>
                            </div>

                        </div> <!-- End of Form Elements -->
                    </div> <!-- End of Border -->

                </form>`;
            
            menu_choice = 3;
        }

    }
</script>